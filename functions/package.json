{
  "name": "ale-veterinaria-functions",
  "version": "1.0.0",
  "description": "Cloud Functions para Ale Veterinaria - Sistema de notificaciones y citas",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "nodemailer": "^6.9.8",
    "cors": "^2.8.5",
    "zod": "^3.22.4",
    "ics": "^3.7.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.3.3"
  }
}